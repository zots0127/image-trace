{
  "name": "image-trace-desktop",
  "productName": "Image Trace",
  "private": true,
  "version": "0.1.6",
  "main": "main.js",
  "type": "commonjs",
  "scripts": {
    "dev": "node scripts/run-electron.cjs",
    "build:frontend": "node scripts/build-frontend.cjs",
    "build:backend": "node scripts/build-backend.cjs",
    "build:backend:nuitka": "node scripts/build-backend-nuitka.cjs",
    "pack": "electron-builder --dir",
    "dist": "npm run dist:pyinstaller",
    "dist:pyinstaller": "npm run build:frontend && npm run build:backend && node scripts/build-dist.cjs pyinstaller",
    "dist:nuitka": "npm run build:frontend && npm run build:backend:nuitka && node scripts/build-dist.cjs nuitka"
  },
  "devDependencies": {
    "electron": "^31.7.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.imagetrace.desktop",
    "productName": "Image Trace",
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*"
    ],
    "extraResources": [
      {
        "from": "backend_bin",
        "to": "backend_bin"
      }
    ],
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "include": "build/installer.nsh"
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  }
}
